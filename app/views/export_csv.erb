Defendant,Docket,Top Charge Severity,Top Charge,Gender,Age,Release Recommendation,Next Court Date,Next Court Part
<% @incidents.each do |incident| %>
<%= CSV.generate_line([ 
  "#{Faker::Name.last_name}, #{Faker::Name.first_name}",
  incident.docket_number,
  incident.top_charge_code_expanded,
  incident.charges.present? ? incident.charges.try {|c| c.first[:agency_code]} : '',
  incident.defendant_sex,
  incident.defendant_age,
  incident.ror_report.try { |r| r.recommendations.map { |x| x.capitalize }.join(", ") },
  incident.next_court_date,
  incident.next_court_part,
], {:col_sep => ",", :row_sep => "\r\n"}).chomp %>
<% end %>
