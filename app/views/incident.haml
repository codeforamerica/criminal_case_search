.incident
  .row-fluid
    .span3
      %h3.name= incident.defendant_name
      %p.docket-number= incident.docket_number
      %p
        %span.sex= format_sex(incident.defendant_sex) + ", "
        %span.age= incident.defendant_age

    .span3     
      %p
        %span.severity= incident.top_charge_code_expanded
        &mdash;
        %span.charge-code= format_top_charge(incident)
      %p.priors
        %span.count= incident.number_of_prior_criminal_convictions 
        Criminal Convictions
      %p.priors
        %span.count= incident.number_of_other_open_cases
        Other Open Cases   
      %p
        - if incident.on_parole?
          = build_disc("PA", "parole", "On Parole")
        - if incident.on_probation?
          = build_disc("PR", "probation", "On Probation")
        - if incident.has_outstanding_bench_warrant?
          = build_disc("W", "warrant", "Has Outstanding Bench Warrant")
        - if incident.persistent_misdemeanant?
          = build_disc("PM", "persistent-misdemeanant", "Persistent Misdemeanant")
        - if incident.has_failed_to_appear?
          = build_disc("FTA", "failure-to-appear", "Has failed to appear in court")

    .span3
      %span.court-date-note Next Court Date
      %h3.court-date= incident.next_court_date.strftime("%b %-d")
      %p.court-part= incident.next_court_part
      %p= incident.next_courthouse

    .span3
      %p= incident.arraignment_outcome
      %p.ror-recommendation= incident.recommendations.join(", ")
